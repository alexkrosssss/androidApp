<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMoveToMain"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            style="@android:style/Widget.Holo.Button"
            android:backgroundTint="#8880857E"
            android:foregroundTint="#7E4A4A"
            android:text="Back" />

        <Button
            android:id="@+id/btnSimCalc"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            style="@android:style/Widget.Holo.Button"
            android:backgroundTint="#8880857E"
            android:foregroundTint="#7E4A4A"
            android:text="Simple" />

        <Button
            android:id="@+id/btnSupCalc"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            style="@android:style/Widget.Holo.Button"
            android:backgroundTint="#8880857E"
            android:foregroundTint="#7E4A4A"
            android:text="Scientific" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="127dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewField"
            android:layout_width="357dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textSize="34sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="452dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <Button
                android:id="@+id/btnPer"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="%"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnPowInTwo"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="x^2"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnErase"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="C" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="=" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="1" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="2" />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="3" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="4" />

            <Button
                android:id="@+id/btnFive"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="5" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="6" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="7" />

            <Button
                android:id="@+id/btnEight"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="8" />

            <Button
                android:id="@+id/btnNine"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="9" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnZero"
                android:layout_width="88dp"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="0" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="88dp"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="." />

            <Button
                android:id="@+id/btnEraseChar"
                android:layout_width="88dp"

                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="Back" />

            <Button
                android:id="@+id/btnMulty"
                android:layout_width="100dp"
                android:layout_height="90dp"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#8880857E"
                android:foregroundTint="#7E4A4A"
                android:text="*" />
        </TableRow>
    </TableLayout>

</LinearLayout>